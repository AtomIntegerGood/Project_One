<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
    <style>
        div{
            float: left;
            width: 50%;
            height: 300px;
            background-color: salmon;
        }
        textarea{
            height: 200px;
            width: 80%;
            font-size: 10px;
        }
    </style>
    <script>
        window.onload=function () {
            let banana=document.getElementById("banana");
            let btn=document.getElementById("btn");
            let dick=document.getElementById("dick");
            btn.onclick=function eee() {
                let str=banana.value;
                //RegExp("12333", "g"), "123"
                str=str.replace(RegExp(": ","g"),":'");
                str=str.replace(RegExp(";","g"),"',");
                str=str.replace(RegExp(" ","g"),"");

                //先把内容转换  → 切为【】  首位 向上转为大写
                let arr=str.split("");
                for(let i=0;i<arr.length;i++){
                    if(arr[i]=="-"){
                        arr[i+1]=arr[i+1].toUpperCase();
                        }
                }
                //重新组合分隔符=空
                str=arr.join("");
                //删掉多余内容
                str.replace(RegExp("-","g"),"");
                banana.innerText=str;
            }
        }
    </script>
</head>
<body>
    <div>
        <textarea id="banana"></textarea>
        <button id="btn">香蕉大比利</button>
    </div>
</body>
</html>
